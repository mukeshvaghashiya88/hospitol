

<h1>Listing Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Appointment</th>
      <th>Doctorid</th>
      <th>Userid</th>
      <th>Petid</th>
      <th>Reminder</th>
      <th>Reason</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.appointmentDate %></td>
        <td><%= appointment.doctorId %></td>
        <td><%= appointment.userId %></td>
        <td><%= appointment.petId %></td>
        <td><%= appointment.reminder %></td>
        <td><%= appointment.reason %></td>
        <td>
          <%= link_to 'Show', appointment %>
              </td>
        <td><% if can? :update, appointment %>
          <%= link_to 'Edit', edit_appointment_path(appointment) %>
              <%end%></td>
        <td><% if can? :destroy, appointment %>
          <%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %>
              <%end%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_appointment_path %>
